/*///////////////////////////////// Record Menu //////////////////////////////*/

RecordingMenu {
    background-color: #f9f9f9;
}

RecordingMenu QCheckBox::indicator::hover {
    background-color: #e6e6e6;
}

RecordingMenu QCheckBox#mic-btn::indicator:unchecked {
    image: url(:/icons/microphone-dark);
}

RecordingMenu QCheckBox#mic-btn::indicator:checked {
    image: url(:/icons/microphone-mute-dark);
}

RecordingMenu QCheckBox#mic-btn::indicator:disabled {
    image: url(:/icons/microphone-mute-light);
}

RecordingMenu QCheckBox#speaker-btn::indicator:unchecked {
    image: url(:/icons/speaker-dark);
}

RecordingMenu QCheckBox#speaker-btn::indicator:checked {
    image: url(:/icons/speaker-mute-dark);
}

RecordingMenu QCheckBox#speaker-btn::indicator:disabled {
    image: url(:/icons/speaker-mute-light);
}

RecordingMenu QCheckBox#camera-btn::indicator:checked {
    image: url(:/icons/camera-fill-dark);
}

RecordingMenu QCheckBox#camera-btn::indicator:unchecked {
    image: url(:/icons/camera-dark);
}

RecordingMenu QCheckBox#camera-btn::indicator:disabled {
    image: url(:/icons/camera-light);
}

RecordingMenu QLabel#time {
    color: #2c2c2c;
}

RecordingMenu QCheckBox#pause-btn::indicator:unchecked {
    image: url(:/icons/pause-dark);
}

RecordingMenu QCheckBox#pause-btn::indicator:checked {
    image: url(:/icons/play-dark);
}

/*///////////////////////////////// Edit Menu //////////////////////////////*/

EditingMenu, EditingSubmenu {
    background-color: #f9f9f9;
    border: 1px solid #dfdfdf;
}

EditingMenu QCheckBox::indicator:unchecked:hover {
    background-color: #e6e6e6;
}

EditingMenu QCheckBox#rect-btn::indicator {
    image: url(:/icons/rectangle-dark);
}

EditingMenu QCheckBox#ellipse-btn::indicator {
    image: url(:/icons/circle-dark);
}

EditingMenu QCheckBox#arrow-btn::indicator {
    image: url(:/icons/arrow-dark);
}

EditingMenu QCheckBox#line-btn::indicator {
    image: url(:/icons/line-dark);
}

EditingMenu QCheckBox#pencil-btn::indicator {
    image: url(:/icons/feather-dark);
}

EditingMenu QCheckBox#image-btn::indicator {
    image: url(:/icons/image-dark);
}

EditingMenu QCheckBox#counter-btn::indicator {
    image: url(:/icons/counter-dark);
}

EditingMenu QCheckBox#text-btn::indicator {
    image: url(:/icons/text-dark);
}

EditingMenu QCheckBox#eraser-btn::indicator {
    image: url(:/icons/eraser-dark);
}

EditingMenu QCheckBox#mosaic-btn::indicator {
    image: url(:/icons/mosaic-dark);
}

EditingMenu QCheckBox#scroll-btn::indicator {
    image: url(:/icons/scroll-dark);
}

EditingMenu QCheckBox#undo-btn::indicator {
    image: url(:/icons/undo-dark);
}

EditingMenu QCheckBox#redo-btn::indicator {
    image: url(:/icons/redo-dark);
}

EditingMenu QCheckBox#undo-btn::indicator:disabled {
    image: url(:/icons/undo-light);
    background-color: #bdbdbd;
}

EditingMenu QCheckBox#redo-btn::indicator:disabled {
    image: url(:/icons/redo-light);
    background-color: #bdbdbd;
}

EditingMenu QCheckBox#pin-btn::indicator {
    image: url(:/icons/pin-dark);
}

EditingMenu QCheckBox#save-btn::indicator {
    image: url(:/icons/save-dark);
}

/*///////////////////////////////// Editing Submenu //////////////////////////////*/

EditingMenu QCheckBox::indicator:unchecked:hover {
    background-color: #e6e6e6;
}

EditingMenu WidthButton {
    color: #2c2c2c;
}

EditingSubmenu QCheckBox#fill-btn::indicator {
    image: url(:/icons/fill-dark)
}